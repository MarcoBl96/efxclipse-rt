<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.2.0" name="org.eclipse.fx.ui.workbench.fx.internal.ProviderComponent">
   <service>
      <provide interface="org.eclipse.fx.ui.workbench.fx.internal.ProviderComponent"/>
   </service>
   <reference bind="addGraphicNodeProvider" cardinality="0..n" interface="org.eclipse.fx.ui.services.resources.GraphicNodeProvider" name="GraphicNodeProvider" policy-option="greedy" unbind="removeGraphicNodeProvider"/>
   <reference bind="addImageProvider" cardinality="0..n" interface="org.eclipse.fx.ui.services.resources.ImageProvider" name="ImageProvider" policy-option="greedy" unbind="removeImageProvider"/>
   <reference bind="setLoggerFactory" interface="org.eclipse.fx.core.log.LoggerFactory" name="LoggerFactory" unbind="unsetLoggerFactory"/>
   <implementation class="org.eclipse.fx.ui.workbench.fx.internal.ProviderComponent"/>
</scr:component>